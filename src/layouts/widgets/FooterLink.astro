---
import type { FooterLink } from "../../data/site-info";
const { link } = Astro.props;
type Props = { link: FooterLink };
import Link from "../../components/Link.astro";
import { Image } from "astro:assets";
---

<Link href={link.url} target="_blank" rel="noopener noreferrer">
  <div class="w-8 flex flex-col items-center text-center">
    <Image src={link.logo} alt={`${link.name} logo`} class="w-8" />
    <p>{link.name}</p>
  </div>
</Link>
